# http://editorconfig.org

root = true

[*]
charset = utf-8
indent_style = tab
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
indent_style = space
indent_size = 2
insert_final_newline = false
trim_trailing_whitespace = false

[*.{py,pyi}]
indent_style = space
indent_size = 4

[*.{yml,yaml,yamllint}]
indent_style = space
indent_size = 2
